<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4AF06292"
    android:padding="20dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDF06292"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_flower"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/flower"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_dash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/horiz"
            android:backgroundTint="@android:color/white"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_flower" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dash">

            <ImageView
                android:id="@+id/remove"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/remove"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="MY LOVE"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/remove"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="YOU LIKE A FLOWER"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_my" />

            <ImageView
                android:id="@+id/icon_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/star"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_you" />

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editor's Choice"
                android:textColor="#F06292"
                app:layout_constraintCircle="@id/icon_star"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="50dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_we"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="We're all a little weird.And life is a little
weird.And when we find someone whose weirdness is compatible with ours,we join
up with them and fall into mutually satisfying weirdness and call it love-true
love."
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_edit" />

            <TextView
                android:id="@+id/txt_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="And in this crazy life.and through these"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_we" />

            <ImageView
                android:id="@+id/icon_d"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_dollar"
                android:backgroundTint="@android:color/holo_blue_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_and" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99.9"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30dp"
                app:layout_constraintCircle="@id/icon_d"
                app:layout_constraintCircleAngle="87"
                app:layout_constraintCircleRadius="50dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:text="ORDER NOW"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircle="@id/icon_d"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="230dp"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>